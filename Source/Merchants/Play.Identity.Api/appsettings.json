{

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Identity": "Data Source=localhost\\SQLEXPRESS01;Initial Catalog=Identity;Integrated Security=True"
  },
  "Authentication": {
    "Google": {
      "ClientId": "set your google client id here, or use dotnet user-secrets to store it",
      "ClientSecret": "set your google client secret here, or use dotnet user-secrets to store it"
    },
    "Facebook": {
      "ClientId": "set your facebook client id here, or use dotnet user-secrets to store it",
      "ClientSecret": "set your facebook client secret here, or use dotnet user-secrets to store it"
    }
  },
  "MerchantPortalClient": {
    "ClientId": "MerchantPortal",
    "ClientSecret": "secret",
    "RedirectUris": "https://yahoo.com",
    "PostLogoutRedirectUris": "https://askjeeves.com"

  },
  "BusinessPayClient": {
    "ClientId": "BusinessPay",
    "ClientSecret": "secret",
    "RedirectUris": "https://yahoo.com",
    "PostLogoutRedirectUris": "https://askjeeves.com"
  },
  "TestUserConfig": {
    "Email": "testuser@hotmail.com",
    "Password": "Password1!"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "System": "Debug"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "pathFormat": "Logs\\log-{Date}.json",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 2147483648,
          "retainedFileCountLimit": 10,
          "rollingInterval": "Day"
        }
      }
    ]
  }
}