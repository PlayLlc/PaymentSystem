    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>bb8e064f-fec1-41b1-9bb3-666157b120cb</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
