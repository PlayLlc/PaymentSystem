<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net7.0-android33.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <NoWarn>NETSDK1023</NoWarn>
    <ApplicationId>com.paywithplay.dev</ApplicationId>
    <ApplicationVersion>8</ApplicationVersion>
    <ApplicationDisplayVersion>1.0.7</ApplicationDisplayVersion>
    <SupportedOSPlatformVersion>28</SupportedOSPlatformVersion>
    <UseMauiEssentials>true</UseMauiEssentials>
    <SynchReleaseVersion>false</SynchReleaseVersion>
    <AndroidAapt2LinkExtraArgs>--min-sdk-version $(SupportedOSPlatformVersion)</AndroidAapt2LinkExtraArgs>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <AndroidPackageFormat>apk</AndroidPackageFormat>
    <JavaMaximumHeapSize />
    <RunAOTCompilation>True</RunAOTCompilation>
    <PublishTrimmed>True</PublishTrimmed>
    <EmbedAssembliesIntoApk>True</EmbedAssembliesIntoApk>
    <AndroidLinkTool>r8</AndroidLinkTool>
    <AndroidEnableProfiledAot>True</AndroidEnableProfiledAot>
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <JavaMaximumHeapSize />
    <PublishTrimmed>False</PublishTrimmed>
    <EmbedAssembliesIntoApk>False</EmbedAssembliesIntoApk>
    <DebugType>portable</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <TrimmerRootDescriptor Include="LinkDescription.xml" />
  </ItemGroup>
  <ItemGroup>
    <ProguardConfiguration Include="proguard-rules.pro" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="DeleteBinObjFolders.bat" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\.editorconfig" Link=".editorconfig" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AppCenter" Version="5.0.2" />
    <PackageReference Include="Microsoft.AppCenter.Crashes" Version="5.0.2" />
    <PackageReference Include="MPAndroidChart" Version="1.0.0" />
    <PackageReference Include="MvvmCross.DroidX.Material" Version="9.0.10" />
    <PackageReference Include="MvvmCross.DroidX.RecyclerView" Version="9.0.10" />
    <PackageReference Include="MvvmCross.DroidX.SwipeRefreshLayout" Version="9.0.10" />
    <PackageReference Include="MvvmCross.Plugin.MethodBinding" Version="9.0.10" />
    <PackageReference Include="PayCardsPlugin" Version="1.0.0" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="7.0.0" />
    <PackageReference Include="Xamarin.Android.Glide" Version="4.15.1.2" />
    <PackageReference Include="Xamarin.Android.TouchImageView" Version="1.1.0" />
    <PackageReference Include="Xamarin.AndroidX.AppCompat" Version="1.6.1.3" />
    <PackageReference Include="Xamarin.AndroidX.Camera.Camera2" Version="1.2.3.1" />
    <PackageReference Include="Xamarin.AndroidX.Camera.Core" Version="1.2.3.1" />
    <PackageReference Include="Xamarin.AndroidX.Camera.Lifecycle" Version="1.2.3.1" />
    <PackageReference Include="Xamarin.AndroidX.Camera.View" Version="1.2.3.1" />
    <PackageReference Include="Xamarin.AndroidX.Core" Version="1.10.1.2" />
    <PackageReference Include="Xamarin.AndroidX.Core.SplashScreen" Version="1.0.1.2" />
    <PackageReference Include="Xamarin.AndroidX.Lifecycle.Runtime" Version="2.6.1.3" />
    <PackageReference Include="Xamarin.AndroidX.Lifecycle.Runtime.Ktx" Version="2.6.1.3" />
    <PackageReference Include="Xamarin.Google.Android.Material" Version="1.9.0.2" />
    <PackageReference Include="Xamarin.AndroidX.Navigation.Fragment.Ktx" Version="2.6.0.1" />
    <PackageReference Include="Xamarin.AndroidX.Navigation.UI.Ktx" Version="2.6.0.1" />
    <PackageReference Include="Xamarin.AndroidX.Navigation.UI" Version="2.6.0.1" />
    <PackageReference Include="Xamarin.AndroidX.Navigation.Runtime" Version="2.6.0.1" />
