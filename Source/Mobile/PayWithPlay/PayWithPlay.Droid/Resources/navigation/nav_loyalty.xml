<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loyalty"
    app:startDestination="@+id/loyaltyScreen">
  <fragment
      android:id="@+id/loyaltyScreen"
      android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltyFragment"
      tools:layout="@layout/fragment_loyalty">

    <action
      android:id="@+id/action_to_search_member"
      app:destination="@id/searchMemberScreen"/>

    <action
      android:id="@+id/action_to_create_member"
      app:destination="@id/createMemberScreen"/>

    <action
      android:id="@+id/action_to_loyalty_programs"
      app:destination="@id/loyaltyProgramsScreen"/>
  </fragment>

  <fragment
    android:id="@+id/createMemberScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.CreateLoyaltyMemberFragment"
    tools:layout="@layout/fragment_create_loyalty_member">
  </fragment>

  <fragment
    android:id="@+id/searchMemberScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.SearchLoyaltyMemberFragment"
    tools:layout="@layout/fragment_search_loyalty_member">

    <action
    android:id="@+id/action_to_loyalty_member"
    app:destination="@id/loyaltyMemberScreen"/>
    
  </fragment>

  <fragment
    android:id="@+id/loyaltyProgramsScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltyProgramsFragment"
    tools:layout="@layout/fragment_loyalty_programs">

    <action
      android:id="@+id/action_to_loyalty_rewards"
      app:destination="@id/loyaltyRewardsScreen"/>

    <action
      android:id="@+id/action_to_loyalty_discounts"
      app:destination="@id/loyaltyDiscountsScreen"/>
  </fragment>

  <fragment
    android:id="@+id/loyaltyRewardsScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltyRewardsFragment"
    tools:layout="@layout/fragment_loyalty_rewards">
  </fragment>

  <fragment
  android:id="@+id/loyaltyMemberScreen"
  android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltyMemberFragment"
  tools:layout="@layout/fragment_loyalty_member">
  </fragment>

  <fragment
    android:id="@+id/loyaltyDiscountsScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltyDiscountsFragment"
    tools:layout="@layout/fragment_loyalty_discounts">

    <action
    android:id="@+id/action_to_loyalty_set_discounts"
    app:destination="@id/loyaltySetDiscountsScreen"/>
  
  </fragment>

  <fragment
  android:id="@+id/loyaltySetDiscountsScreen"
  android:name="PayWithPlay.Droid.Fragments.MainFragments.Loyalty.LoyaltySetDiscountsFragment"
  tools:layout="@layout/fragment_loyalty_set_discounts">
  </fragment>

</navigation>
