<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventory"
    app:startDestination="@+id/inventoryScreen">
  <fragment
      android:id="@+id/inventoryScreen"
      android:name="PayWithPlay.Droid.Fragments.MainFragments.Inventory.InventoryFragment"
      tools:layout="@layout/fragment_inventory">
    <action
      android:id="@+id/action_to_create_item"
      app:destination="@id/createItemScreen"/>

    <action
        android:id="@+id/action_to_search_inventory"
        app:destination="@id/searchInventoryScreen"/>

    <action
      android:id="@+id/action_to_scan_item"
      app:destination="@+id/scanItemScreen"/>
  </fragment>

  <fragment
    android:id="@+id/createItemScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Inventory.CreateItemFragment"
    tools:layout="@layout/fragment_create_inventory_item">
  </fragment>

  <fragment
    android:id="@+id/searchInventoryScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Inventory.SearchInventoryFragment"
    tools:layout="@layout/fragment_search_inventory">

    <action
     android:id="@+id/action_to_create_item"
     app:destination="@+id/createItemScreen"/>

    <action
      android:id="@+id/action_to_manage_stock"
      app:destination="@+id/manageStockScreen"/>

  </fragment>

  <fragment
    android:id="@+id/manageStockScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Inventory.ManageStockFragment"
    tools:layout="@layout/fragment_inventory_manage_stock">
  </fragment>

  <fragment
    android:id="@+id/scanItemScreen"
    android:name="PayWithPlay.Droid.Fragments.MainFragments.Inventory.InventoryScanItemFragment"
    tools:layout="@layout/fragment_inventory_scan_item">

    <action
     android:id="@+id/action_to_create_item"
     app:destination="@+id/createItemScreen"/>

    <action
      android:id="@+id/action_to_manage_stock"
      app:destination="@+id/manageStockScreen"/>
      
  </fragment>

</navigation>
