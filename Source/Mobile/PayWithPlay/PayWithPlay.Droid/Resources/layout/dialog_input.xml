<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            style="@style/MediumTextStyle"
            app:MvxBind="Text Title"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/value_til"
            android:theme="@style/TextInputTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <PayWithPlay.Droid.CustomViews.EditTextWithValidation
                android:id="@+id/value_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                style="@style/InputEditTextStyle"
                app:MvxBind="Hint HintText; Text Value"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            style="@style/PrimaryButton"
            app:MvxBind="Text DoneButtonText; Click OnDone"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btn_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:src="@drawable/ic_close"
        android:tint="@color/black"
        app:MvxBind="Click OnClose"/>

</FrameLayout>