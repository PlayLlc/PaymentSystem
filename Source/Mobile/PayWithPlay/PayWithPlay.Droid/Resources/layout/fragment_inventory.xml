<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/actions_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="24dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="@color/secondary_color">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:padding="0dp"
            android:paddingStart="9dp"
            android:textSize="12sp"
            app:iconGravity="start"
            app:iconSize="0dp"
            app:icon="@drawable/ic_search_small"
            app:iconTint="@color/white"
            style="@style/SecondaryLightButton"
            app:MvxBind="Text SearchButtonText; Click OnSearch; CenterTextWhenIcon true"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:rippleColor="@color/secondary_color"
            app:iconSize="0dp"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_plus_very_small"
            app:iconTint="@color/secondary_color"
            style="@style/PrimaryLightButton"
            app:MvxBind="Text AddButtonText; Click OnAdd"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scan_btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:padding="0dp"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:rippleColor="@color/secondary_color"
            app:iconSize="0dp"
            app:iconGravity="textStart"
            app:icon="@drawable/ic_scan_inventory"
            app:iconTint="@color/secondary_color"
            style="@style/PrimaryLightButton"
            app:MvxBind="Text ScanButtonText; Click OnScan"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <MvvmCross.DroidX.MvxSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:MvxBind="Refreshing IsRefreshing; RefreshCommand RefreshCommand">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:fillViewport="true"
            tools:ignore="UselessParent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp"
                    style="@style/BigTitleStyle"
                    app:MvxBind="Text Title"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/subTitle_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:textColor="@color/hint_text_color"
                    style="@style/DefaultTextStyle"
                    app:MvxBind="Text Subtitle"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/top_cards_container"
                    android:layout_width="match_parent"
                    android:layout_height="132dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_marginHorizontal="20dp">
                    
                    <PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView
                        android:id="@+id/view1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="132dp"
                        app:fillColor="@color/third_color"
                        app:cornerRadius="5dp"
                        android:layout_marginEnd="6dp"
                        tools:ignore="Suspicious0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="8dp"
                                style="@style/VerySmallTextStyle"
                                android:textColor="@color/primary_text_color"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                app:MvxBind="Text STRText"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                style="@style/MediumTextStyle"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginHorizontal="12dp"
                                android:layout_gravity="center_horizontal"
                                app:MvxBind="Text STRDisplayValue"/>

                            <PayWithPlay.Droid.CustomViews.ArcProgressView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="12dp"
                                android:layout_gravity="center_horizontal"
                                app:pathColor="@color/accent_color_with_opacity"
                                app:progressColor="@color/accent_color"
                                app:indicatorColor="@color/black"
                                app:MvxBind="ArcProgress STRValue"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView>

                    <PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView
                        android:id="@+id/view2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="132dp"
                        app:fillColor="@color/third_color"
                        app:cornerRadius="5dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        tools:ignore="Suspicious0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                style="@style/VerySmallTextStyle"
                                android:textColor="@color/primary_text_color"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                app:MvxBind="Text NewInventoryTodayText"/>

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:autoSizeTextType="uniform"
                                    android:autoSizeMaxTextSize="24sp"
                                    android:autoSizeMinTextSize="10sp"
                                    android:autoSizeStepGranularity="1sp"
                                    style="@style/MediumTitleStyle"
                                    android:fontFamily="@font/poppins_bold"
                                    android:layout_marginHorizontal="12dp"
                                    android:layout_gravity="center"
                                    app:MvxBind="Text NewInventoryAddedToday"/>

                            </FrameLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView>

                    <PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="132dp"
                        app:fillColor="@color/secondary_color"
                        app:cornerRadius="5dp"
                        android:layout_marginStart="6dp"
                        tools:ignore="Suspicious0dp">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                style="@style/VerySmallTextStyle"
                                android:textColor="@color/white"
                                android:layout_marginHorizontal="12dp"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal"
                                app:MvxBind="Text AvgRevenuePerUnitText"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:lines="1"
                                android:maxLines="1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMinTextSize="10sp"
                                android:autoSizeMaxTextSize="16sp"
                                android:autoSizeStepGranularity="1sp"
                                style="@style/MediumTextStyle"
                                android:textColor="@color/white"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_marginHorizontal="12dp"
                                android:layout_gravity="center_horizontal"
                                app:MvxBind="Text AvgRevenuePerUnitDisplayValue"/>

                            <PayWithPlay.Droid.CustomViews.MiniChartView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="12dp"
                                android:layout_marginHorizontal="12dp"
                                app:MvxBind="MiniChartData AvgRevenuePerUnitChartModel"/>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableFrameLayoutView>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/top_selling_items_container"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="8dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:layout_centerVertical="true"
                            android:textColor="@color/primary_text_color"
                            style="@style/VerySmallTextStyle"
                            app:MvxBind="Text TopSellingProductsChartModel.TopSellingItemsText"/>

                        <PayWithPlay.Droid.CustomViews.RadioButtonsView
                            android:id="@+id/top_selling_products_step_buttons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="4dp"
                            app:buttonsHeight="20dp"
                            app:buttonsPadding="2dp"
                            app:buttonsTextSize="10sp"
                            app:buttonSelectedTextColor="@color/accent_color"
                            app:buttonDefaultTextColor="@color/hint_text_color"
                            app:MvxBind="ItemsSource TopSellingProductsChartModel.ChartStepButtons; RadioButtonSelectedType TopSellingProductsChartModel.SelectedChartStep"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:clickable="true"
                            android:layout_alignLeft="@+id/top_selling_products_step_buttons"
                            android:layout_alignTop="@+id/top_selling_products_step_buttons"
                            android:layout_alignRight="@+id/top_selling_products_step_buttons"
                            android:layout_alignBottom="@+id/top_selling_products_step_buttons"
                            app:MvxBind="Visibility Visibility(TopSellingProductsChartModel.IsLoading)"/>

                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/top_selling_products_chart_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:layout_margin="24dp"
                            android:indeterminateTint="@color/accent_color"
                            app:indicatorColor="@color/accent_color"
                            app:MvxBind="Visibility Visibility(TopSellingProductsChartModel.IsLoading)"/>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/top_selling_items_bar_chart"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="6dp"
                            app:MvxBind="Visibility InvertedVisibility(TopSellingProductsChartModel.IsLoading)"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/sales_vs_shrinkage_container"
                    android:layout_width="match_parent"
                    android:layout_height="184dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="14dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|top"
                            android:textColor="@color/primary_text_color"
                            style="@style/VerySmallTextStyle"
                            app:MvxBind="Text SalesVsShrinkageChartModel.SalesVsShrinkageText"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center_vertical"
                                    app:fillColor="@color/chart_primary_color"
                                    app:cornerRadius="1dp"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:textColor="@color/chart_primary_color"
                                    style="@style/VerySmallTextStyle"
                                    android:textSize="8sp"
                                    app:MvxBind="Text SalesVsShrinkageChartModel.SalesText"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="1dp"
                                android:orientation="horizontal">

                                <PayWithPlay.Droid.CustomViews.ShapeableViews.ShapeableView
                                    android:layout_width="5dp"
                                    android:layout_height="5dp"
                                    android:layout_gravity="center_vertical"
                                    app:fillColor="@color/chart_secondary_color"
                                    app:cornerRadius="1dp"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:textColor="@color/chart_secondary_color"
                                    style="@style/VerySmallTextStyle"
                                    android:textSize="8sp"
                                    app:MvxBind="Text SalesVsShrinkageChartModel.ShrinkageText"/>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/sales_vs_shrinkage_chart_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:layout_margin="24dp"
                            android:indeterminateTint="@color/accent_color"
                            app:indicatorColor="@color/accent_color"
                            app:MvxBind="Visibility Visibility(SalesVsShrinkageChartModel.IsLoading)"/>

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/sales_vs_shrinkage_line_chart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="6dp"
                            app:MvxBind="Visibility InvertedVisibility(SalesVsShrinkageChartModel.IsLoading)"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/shrinkage_rate_container"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primary_text_color"
                        style="@style/VerySmallTextStyle"
                        app:MvxBind="Text ShrinkageRateChartModel.ShrinkageRateText"/>

                    <FrameLayout
                        android:id="@+id/shrinkage_rate_chart_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:layout_margin="24dp"
                            android:indeterminateTint="@color/accent_color"
                            app:indicatorColor="@color/accent_color"
                            app:MvxBind="Visibility Visibility(ShrinkageRateChartModel.IsLoading)"/>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/shrinkage_rate_bar_chart"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="6dp"
                            app:MvxBind="Visibility InvertedVisibility(ShrinkageRateChartModel.IsLoading)"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/inventory_on_hand_container"
                    android:layout_width="match_parent"
                    android:layout_height="212dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/primary_text_color"
                        style="@style/VerySmallTextStyle"
                        app:MvxBind="Text InventoryOnHandChartModel.DaysInventoryOnHandText"/>

                    <FrameLayout
                        android:id="@+id/inventory_on_hand_chart_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:indeterminate="true"
                            android:layout_margin="24dp"
                            android:indeterminateTint="@color/accent_color"
                            app:indicatorColor="@color/accent_color"
                            app:MvxBind="Visibility Visibility(InventoryOnHandChartModel.IsLoading)"/>

                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/inventory_on_hand_bar_chart"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="6dp"
                            android:layout_marginBottom="6dp"
                            app:MvxBind="Visibility InvertedVisibility(InventoryOnHandChartModel.IsLoading)"/>

                    </FrameLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </MvvmCross.DroidX.MvxSwipeRefreshLayout>

</androidx.appcompat.widget.LinearLayoutCompat>