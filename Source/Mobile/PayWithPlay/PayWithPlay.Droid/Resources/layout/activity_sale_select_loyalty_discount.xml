<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <include
        layout="@layout/view_back_and_title"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/MediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_gravity="start|center_vertical"
            android:fontFamily="@font/poppins_semibold"
            app:MvxBind="Text PointsText"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/MediumTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_gravity="end|center_vertical"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/positive_color"
            app:MvxBind="Text Points"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="Suspicious0dp">

        <mvvmcross.droidx.recyclerview.MvxRecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="36dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:overScrollMode="never"
            app:MvxItemTemplate="@layout/row_loyalty_member_discount"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:MvxBind="ItemsSource Discounts; ItemClick OnDiscountItem"/>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        style="@style/DefaultTextStyle"
        android:textColor="@color/hint_text_color"
        app:MvxBind="Text ContinueWithoutDiscountText"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="20dp"
        style="@style/PrimaryButton"
        app:MvxBind="Text ContinueButtonText; Click OnContinue"/>

</androidx.appcompat.widget.LinearLayoutCompat>