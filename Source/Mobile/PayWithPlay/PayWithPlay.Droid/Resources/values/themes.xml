    <item name="android:letterSpacing">0</item>
    <item name="android:background">@null</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@drawable/unelevated_button_text_color</item>
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingHorizontal">0dp</item>
  </style>

  <style name="NumberKeyButton" parent="@style/BaseButton">
