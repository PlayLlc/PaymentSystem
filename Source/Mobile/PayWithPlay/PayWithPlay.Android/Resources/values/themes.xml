<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Theme.App.Starting" parent="Theme.SplashScreen">
    <!-- Set the splash screen background, animated icon, and animation duration. -->
    <item name="windowSplashScreenBackground">@color/secondary_color</item>

    <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
    <item name="windowSplashScreenAnimatedIcon">@mipmap/appicon_foreground</item>
    <!-- Required for animated icons -->
    <item name="windowSplashScreenAnimationDuration">0</item>

    <!-- Set the theme of the Activity that directly follows your splash screen. -->
    <!-- Required -->
    <item name="postSplashScreenTheme">@style/Theme.Mobility.NoActionBar</item>
    <item name="android:windowDisablePreview">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <!-- Base application theme. -->
  <style name="Theme.Mobility.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/primary_color</item>
    <item name="colorPrimaryVariant">@color/primary_color</item>
    <item name="colorOnPrimary">@color/white</item>
    <item name="colorAccent">@color/accent_color</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/secondary_color</item>
    <item name="colorSecondaryVariant">@color/secondary_color</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor">@color/secondary_color</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowTranslucentStatus">false</item>
    <item name="android:windowLightStatusBar">false</item>
    <!-- Customize your theme here. -->

    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowDisablePreview">false</item>
    <item name="android:windowBackground">@color/primary_color</item>

    <item name="InputBoxesViewStyleAttr">@style/InputBoxEditTextStyle</item>
  </style>

  <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
    <item name="android:textAppearance">@style/ButtonText</item>
    <item name="android:theme">@style/PrimaryButtonTheme</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textColor">@color/primary_text_color</item>
    <item name="cornerRadius">24dp</item>
    <item name="strokeWidth">2dp</item>
    <item name="strokeColor">@color/accent_color</item>
    <item name="backgroundTint">@color/white</item>
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:textSize">14sp</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:background">@null</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@drawable/unelevated_button_text_color</item>
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingHorizontal">0dp</item>
  </style>

  <style name="PrimaryButtonTheme" parent="Theme.MaterialComponents">
    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorPrimary">@color/accent_color</item>
    <item name="colorOnSurface">@android:color/white</item>
  </style>

  <style name="ButtonText" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">sans-serif-medium</item>
    <item name="fontFamily">sans-serif-medium</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:letterSpacing">0</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="BigTitleStyle" parent="@android:style/Widget.TextView">
    <item name="android:textSize">32sp</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textColor">@color/accent_color</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="DefaultTextStyle" parent="@android:style/Widget.TextView">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:textColor">@color/primary_text_color</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="TextInputTheme" parent="Theme.Mobility.NoActionBar">
    <item name="colorPrimary">@color/accent_color</item>
    <item name="colorPrimaryVariant">@color/accent_color</item>
    <item name="colorOnPrimary">@color/accent_color</item>
    <item name="colorAccent">@color/accent_color</item>
    <item name="textInputOutlinedDenseStyle">@style/TextInputStyle</item>
    <item name="textInputOutlinedStyle">@style/TextInputStyle</item>
    <item name="textInputStyle">@style/TextInputStyle</item>
    <item name="InputBoxesViewStyleAttr">@style/InputBoxEditTextStyle</item>
  </style>
  
  <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
    <item name="boxBackgroundColor">@color/white</item>
    <item name="labelBehavior">gone</item>
    <item name="hintAnimationEnabled">false</item>
    <item name="hintEnabled">false</item>
    <item name="boxStrokeColor">@color/accent_color</item>
    <item name="boxStrokeWidth">2dp</item>
    <item name="android:textColorHint">@color/hint_text_color</item>
    <item name="hintTextColor">@color/hint_text_color</item>
    <item name="android:textColor">@color/primary_text_color</item>
    <item name="android:includeFontPadding">false</item>
    <item name="colorAccent">@color/accent_color</item>
  </style>

  <style name="InputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox.Dense">
    <item name="colorAccent">@color/accent_color</item>
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/poppins_regular</item>
    <item name="android:textColor">@color/primary_text_color</item>
    <item name="android:textColorHint">@color/hint_text_color</item>
    <item name="maxLines">1</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textCursorDrawable">@null</item>
  </style>

  <style name="InputBoxEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">38dp</item>
    <item name="android:textColor">@color/accent_color</item>
    <item name="android:textSize">32sp</item>
    <item name="android:fontFamily">@font/poppins_medium</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textCursorDrawable">@null</item>
    <item name="android:padding">0dp</item>
    <item name="android:inputType">number</item>
    <item name="android:singleLine">true</item>
    <item name="android:lines">1</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:minWidth">0dp</item>
    <item name="android:paddingHorizontal">0dp</item>
    <item name="android:minHeight">0dp</item>
    <item name="android:paddingVertical">0dp</item>
  </style>

  <style name="DeviceSettingsButtonStyle" parent="@style/PrimaryButton">
    <item name="strokeColor">@color/secondary_color</item>
    <item name="backgroundTint">@drawable/enable_settings_button_selector</item>
  </style>
  
</resources>